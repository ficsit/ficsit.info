{
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.rulers": [80, 110],
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.*": true,
    "dist/": true,
    "node_modules/": true,
    "typings/": true,
    "**/*.config.*": true,
    "**/tsconfig*.json": true,
    "**/*.log*": true,
    "*LICENSE*": true,
    "yarn.lock": true,
    "firebase.json": true
  },
  "npm.packageManager": "yarn",
  "npm.autoDetect": "off",
  "typescript.tsc.autoDetect": "off",
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.formatOnSave": true,
  "jest.enableSnapshotUpdateMessages": false,
  "emmet.excludeLanguages": ["markdown", "typescriptreact"]
}
